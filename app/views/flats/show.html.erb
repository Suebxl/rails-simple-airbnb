<div class="map" style="background-image: url('<%= @flat.picture_url %>')"></div>

<div class="container col-6 mt-3">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h4><%=@flat.name  %></h4>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h5>A bit more about this flat</h5>
        <p> <%=@flat.description  %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place</h5>
      </div>
      <div class="flat-show-card">
        <h4>Details</h4>
        <p><i class="fa-solid fa-camera-retro"></i> <%= @flat.number_of_guests %></p>
        <p><i class="fa-solid fa-euro-sign"></i>  <%= @flat.price_per_night %></p>
      </div>
       <div class="flat-show-card">
        <div class="flex-align">
          <h4>Share</h4>
          <div class="flex ">
            <h4><i class="fa-brands fa-facebook-square me-2"></i></h4>
            <h4><i class="fa-brands fa-instagram-square me-2"></i></h4>
          </div>
        </div>
       </div>
    </div>
  </div>

</div>
